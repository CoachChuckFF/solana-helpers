{
  "name": "solana-helpers",
  "version": "0.0.1",
  "description": "A collection of helper functions to make frontend dev for solana easier",
  "main": "index.js",
  "scripts": {
    "test": "echo nope",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoachChuckFF/solana-helpers.git"
  },
  "keywords": [
    "Solana",
    "Metaplex",
    "SPL"
  ],
  "author": "Coach Chuck",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CoachChuckFF/solana-helpers/issues"
  },
  "homepage": "https://github.com/CoachChuckFF/solana-helpers#readme",
  "dependencies": {
    "@metaplex/js": "^4.12.0",
    "@project-serum/anchor": "^0.20.1",
    "@solana/spl-token": "^0.1.8",
    "buffer-layout": "^1.2.2"
  },
  "devDependencies": {
    "prettier": "^2.6.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3"
  }
